<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bullet_arms_dlg_loading_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <pers.liyi.bullet.arms.widget.CircleProgressBar
            android:id="@+id/progressbar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            app:cpb_barColor="@color/bulletArms_white"
            app:cpb_barLength="25dp"
            app:cpb_barWidth="3dp"
            app:cpb_contourColor="#33FFFFFF"
            app:cpb_rimColor="#22FFFFFF"
            app:cpb_rimWidth="3dp"
            app:cpb_spinSpeed="4"
            app:cpb_textColor="@color/bulletArms_white"
            app:cpb_textSize="11dp" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:lineHeight="12dp"
            android:text="加载中..."
            android:textColor="@color/bulletArms_white"
            android:textSize="12dp"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>